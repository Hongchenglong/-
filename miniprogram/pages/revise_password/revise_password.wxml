<view class='content'>
	<form bindsubmit="formSubmit">
		<view class='contentAbout'>
			<view class='contentPass'>
				<input password='true' name="oldpwd" placeholder='请输入旧密码' />
			</view>

			<view class='contentPass'>
				<input password='true' name="newpwd" placeholder='请输入新密码' />
			</view>

			<view class='contentPass'>
				<input password='true' name="newpwd2" placeholder='请确认一遍密码' />
			</view>
		</view>
		<button style="width:70%;background-color: #7EC4F8;border-radius: 30px;" type='primary' form-type="submit" bindtap="formSubmit">
		<image src="../../images/点击.png"></image><text decode="{{true}}">&nbsp;提交</text></button>
	</form>
</view>