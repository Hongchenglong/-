/* pages/teacher_mine/teacher_mine.wxss */
page {
  height: 100%;
}

.back {
  width: 100%;
  height: 100%;
  background-size: 100% 100%;
  position: fixed;
  z-index: -1;
  /*让图片置于最底层，不会影响其它部分*/
  border-bottom: 1rpx solid rgb(197, 192, 192);
}

.in {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: auto;
  flex-direction: column;
  padding-top: 50rpx;
  font-size: 32rpx;
  font-family: Microsoft YaHei;
}

.avatar {
  overflow: hidden;
  height: 200rpx;
  width: 200rpx;
  border-radius: 50%;
}

.head {
  margin-top: 30rpx;
}

i-cell-group {
  font-size: 32rpx;
}

.down {
  margin-top: 35rpx;
}

button {
  margin: 5px;
  border: 1rpx solid rgb(197, 192, 192);
  background-color: #fff;
}

/** 添加自定义button点击态样式类**/
.other-button-hover {
  background-color:rgb(197, 192, 192);
}

.bottom_menu {
  width: 100%;
  height: 9%;
  bottom: 0rpx;
  position: fixed;
}