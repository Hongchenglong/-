/* pages/teacher_statistics/teacher_statistics.wxss */
@import"/colorui/main.wxss";

.up{
  width: 95%;
  margin: 0rpx auto;
}

.name{
  width:95%;
  margin-top: 30rpx;
  font-size: 13px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
}

.table {
  width:95%;
  margin: 10rpx auto;
  background-color: #fff;
  border: 0rpx solid #eff4f8;
  font-size: 12px;
  flex-direction: column;
}

.tr {
  display: flex;
  width: 100%;
  height: 2rem;
}

.td,
.th {
  display: flex;
  justify-content: center;
  /*水平居中 */
  align-items: center;
  /*垂直居中*/
  width: 100%;
  border: 1rpx solid #eff4f8;
  height: 2rem;
  border-bottom: 1px solid #eff4f8;
  border-right: 1px solid #eff4f8;
}

.bg-w {
  background: #b2dffe;
}

.calendar {
  width: 95%;
  text-align: center;
  font-size: 30rpx;
  box-sizing: border-box;
  margin: 30rpx auto;
}

/* 标题 */
.calendar-title {
  line-height: 70rpx;
  font-size: 30rpx;
  text-align: left;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.calendar-title .ctrl {
  display: inline-block;
  padding: 0 20rpx; 
  border-radius: 10rpx;
}

.calendar-title .item {
  display: inline-block;
  vertical-align: middle;
  line-height: 50rpx;
}

.calendar-title .title {
  min-width: 300rpx;
  text-align: center;
}

.calendar-title .today {
  float: right;
  margin-top:10rpx ;
}

/* 星期 */
.calendar-week {
  display: flex;
  text-align: center;
  padding: 20rpx 10rpx;
  box-sizing: border-box;
  border-top: 1rpx solid #e0e0e0;
  border-bottom: 1rpx solid #e0e0e0;
  background: #f5f5f5;
}

.calendar-week .item {
  flex: 1;
}

/* 日期 */
.calendar-container {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 10rpx;
  box-sizing: border-box;
}

.calendar-container .grid {
  display: inline-block;
  width: 14.28571428571429%;
  line-height: 70rpx;
  position: relative;
  z-index: 1;
}

.calendar-container .grid .self {
  position: absolute;
  top: 0rpx;
  right: 0rpx;
  width: 15rpx;
  height: 15rpx;
  border-radius: 50%;
  background: #7EC4F8;
  border: 3rpx solid #fff;
}

.calendar-container .grid.gray {
  color: #ccc;
}

.calendar-container .grid .wrap.select {
  background: #7EC4F8;
  border-radius: 10rpx;
  color: #fff;
  width: 80%;
  margin: 0 auto;
}

/* 滚动展示 */
.calendar-x {
  white-space: nowrap;
  padding: 20rpx 0;
  height: 110rpx;
}

.calendar-x .grid {
  display: inline-block;
  line-height: 70rpx;
  position: relative;
  z-index: 1;
  width: 70rpx;
  text-align: center;
  background: #f5f5f5;
  border-radius: 10rpx;
  margin-left: 20rpx;
}
.calendar-x .grid:last-child{
  margin-right: 20rpx;
}

.calendar-x .grid .self {
  position: absolute;
  top: 0rpx;
  right: 0rpx;
  width: 15rpx;
  height: 15rpx;
  border-radius: 50%;
  background: #7EC4F8;
  border: 3rpx solid #fff;
}

.calendar-x .grid.gray {
  color: #ccc;
}

.calendar-x .grid .wrap.select {
  background: #7EC4F8;
  border-radius: 10rpx;
  color: #fff;
  margin: 0 auto;
}

