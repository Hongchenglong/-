  min-height: 16px;
  margin: 10px 15px;
  padding-bottom: 10px;
  color: #495060;
  font-size: 14px;
  align-items: center; /*垂直居中*/
  border-bottom: 1rpx solid #e9eaec ;
}

.sex_txt{
  padding-right: 5px;
}

radio {
  transform:scale(0.8);
}

.txt{
  color: #495060;
  min-width: 65px;
  padding-right: 10px
}

.block_txt{
  padding-right: 10px;
  min-width: 52px;
}

.address1{
  font-size: 14px;
  color: #495060;
  height: 20px;
  min-height: 16px;
