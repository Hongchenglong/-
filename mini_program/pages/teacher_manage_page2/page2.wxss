}

.block,.number{
  display: flex;
  align-items: center; /*垂直居中*/
}

image{
  width: 55rpx;
  height: 55rpx;
}

.plain-hover{
  position: relative;
  top: 3rpx;
  box-shadow:0px 0px 10px #7AB8FB inset; 
}

button{
  background-color: #7AB8FB;
  display: flex;
  align-items: center;
  justify-content: center;  
  color: #fff;
  border: 0;
  margin-top:20rpx ;
}



/* 列表 */
.table {
  /* width: 90%; */
  display: flex;
  margin: 40rpx 60rpx;
  background-color: #fff;
  border: 5rpx solid #d9e0e7;
  font-size: 10px;
  flex-direction: column;
}
.tr {
  display: flex;
  width: 100%;
  height: 2rem;
}
.td,.th {
  display: flex;
  justify-content: center;  /*水平居中 */
  align-items: center; /*垂直居中*/
  width: 100%;
  border-bottom: 1.5px solid #d9e0e7;
  border-left: 1px solid #d9e0e7;
  border-right: 1px solid #d9e0e7;
  height: 2rem;
  text-align: center;
}
.bg-w{
  background: #f2f2f2;
  font-weight: normal;
  font-size: 10px;
  color: #8a8e94;
}

thead th{
  position: relative;
  }
  
  .table>tbody>tr>td,
  .table>tbody>tr>th,
  .table>tfoot>tr>td,
  .table>tfoot>tr>th,
  .table>thead>tr>td,
  .table>thead>tr>th {
  white-space: nowrap;
  }

