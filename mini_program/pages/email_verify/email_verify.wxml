<!--pages/email_verify/email_verify.wxml-->
<view class='changeInfo'>

	<!--输入邮箱-->
	<view class='changeInfoName'>
		<input placeholder='请输入邮箱' 
      bindinput="emailInput"/>
	</view>

	<!--输入验证码-->
	<view class='changeInfoName'>
		<input placeholder='请输验证码' 
      style='width:70%;' bindinput="numInput" />
		<button class='codeBtn' bindtap="onClick" disabled='{{disabled}}'>
			{{codename}}
		</button>
	</view>

	<!--提交申请-->
	<view>
		<button class='btn' bindtap="onInput">
			下一步
		</button>
	</view>

</view>